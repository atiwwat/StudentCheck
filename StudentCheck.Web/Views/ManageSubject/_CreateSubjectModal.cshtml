@model StudentCheck.DataAccess.ModelViews.ManageSubjectViewModel

<div class="modal fade" id="modal-create-subject">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="create-subject-form" asp-controller="ManageSubject" asp-action="SaveSubject" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSaveSubjectSuccess">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Create Subject</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-1">
                            <label asp-for="modelCreateSubject.SubjectId">รหัสวิชา</label>
                        </div>
                        <div class="form-group col-sm-3">
                            <input asp-for="modelCreateSubject.SubjectId" class="form-control" />
                            <span asp-validation-for="modelCreateSubject.SubjectId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-check-group col-sm-1">
                            <label asp-for="modelCreateSubject.SubjectNameThai">ชื่อวิชาภาษาไทย</label>
                        </div>
                        <div class="form-group col-sm-3">
                            <input asp-for="modelCreateSubject.SubjectNameThai" class="form-control" />
                            <span asp-validation-for="modelCreateSubject.SubjectNameThai" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-1">
                            <label asp-for="modelCreateSubject.SubjectNameEng">ชื่อวิชาภาษาอังกฤษ</label>
                        </div>
                        <div class="form-group col-sm-3">
                            <input asp-for="modelCreateSubject.SubjectNameEng" class="form-control" />
                            <span asp-validation-for="modelCreateSubject.SubjectNameEng" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-1">
                                <label asp-for="modelCreateSubject.SubjectCredit">หน่วยกิจ</label>
                            </div>
                            <div class="form-group col-sm-2">
                                <input asp-for="modelCreateSubject.SubjectCredit" class="form-control" />
                                <span asp-validation-for="modelCreateSubject.SubjectCredit" class="text-danger"></span>
                            </div>
                        </div>

                      
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">ปิด</button>
                    <button type="submit" class="btn btn-primary">เพิ่ม</button>
                </div>
            </form>
        </div>
    </div>
</div>

